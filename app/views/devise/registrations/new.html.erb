<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
      ようこそ！ALCORHYTHMへ！
  </div>

  <%= render 'shared/error_messages', model: f.object %>

  <div class="form-group">
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"ニックネーム", maxlength:"20" %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"メールアドレス", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"パスワード" %>
    <div class="pasword-attention">
    ※8文字以上、半角英数字のみ
    </div>
  </div>
  <div class="form-group">
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"パスワード(確認用)" %>
    <div class="pasword-attention">
    ※パスワードで入力したものと同じもの
    </div>
  </div>
  <div class="form-group">
    <div class="sex_select">
    <%= f.collection_select(:sex_id, Sex.all, :id,:name,{},{class:"input-default",id:"sex"})%>
    </div>
    <div class="sex-attention">
    ※入力した性別によって適正飲酒量を表示します
    </div>
   </div>
  <div class='register'>
    <%= f.submit "新規登録" ,class:"register-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/second-footer"%>
